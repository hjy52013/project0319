<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activity.Waiting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="请等待传输接收方接收文件..."
        android:id="@+id/textView"
        android:textColor="@color/primary_dark"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="使用PC版请输入连接码："
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:id="@+id/infoPC"
        android:layout_marginTop="43dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/IPaddress"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary_text"
        android:layout_alignTop="@+id/infoPC"
        android:layout_toRightOf="@+id/infoPC"
        android:layout_toEndOf="@+id/infoPC"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="用户名：username"
        android:layout_marginTop="20dp"
        android:id="@+id/username"
        android:textSize="20sp"

        android:textColor="@color/primary_text"
        android:layout_below="@+id/infoPC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="密    码：password"
        android:id="@+id/password"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="结束传输"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:id="@+id/stopConnect"
        android:background="@drawable/button_style"
        />

</LinearLayout>
